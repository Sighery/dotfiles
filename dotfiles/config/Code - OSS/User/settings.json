{
{%@@ if profile == "zoo-work" @@%}
	"jenkins.pipeline.linter.connector.url": "{{@@ zoo_work_jenkins_domain @@}}/pipeline-model-converter/validate",
	"jenkins.pipeline.linter.connector.user": "{{@@ zoo_work_username @@}}",
{%@@ endif @@%}
	"atomKeymap.promptV3Features": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.formatOnPaste": true,
	"editor.minimap.enabled": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"files.autoSave": "afterDelay",
	"editor.fontFamily": "'monospace', monospace, 'Droid Sans Mono', 'Droid Sans Fallback'",
	"editor.insertSpaces": false,
	"window.menuBarVisibility": "toggle",
	"workbench.activityBar.visible": false,
	"workbench.sideBar.location": "right",
	"editor.renderWhitespace": "boundary",
	"files.insertFinalNewline": true,
	"workbench.colorTheme": "Community Material Theme Palenight High Contrast",
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"workbench.colorCustomizations": {
		"editorRuler.foreground": "#ff4081",
	},
	"editor.rulers": [
		78,
		70
	],
	"[python]": {
		"editor.formatOnPaste": false,
		"editor.rulers": [
			87,
			71,
			79
		],
	},
	"python.formatting.provider": "black",
	"python.linting.enabled": true,
	"python.linting.pylintEnabled": true,
	"python.linting.mypyEnabled": true,
	"python.dataScience.askForKernelRestart": false,
	"[javascript]": {
		"editor.rulers": [
			98,
			71,
			79
		],
	},
	"[rust]": {
		"editor.rulers": [
			98,
			79,
			89
		],
		"editor.defaultFormatter": "rust-lang.rust",
	},
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.git": false
	},
	"rewrap.autoWrap.enabled": true,
	"rust.clippy_preference": "on",
	"gitlens.codeLens.enabled": false,
	"gitlens.advanced.telemetry.enabled": false,
	"gitlens.codeLens.authors.enabled": false,
	"explorer.confirmDelete": false,
}
