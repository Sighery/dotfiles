{
{%@@ if profile == "zoo-work" @@%}
	"jenkins.pipeline.linter.connector.url": "{{@@ zoo_work_jenkins_domain @@}}/pipeline-model-converter/validate",
	"jenkins.pipeline.linter.connector.user": "{{@@ zoo_work_username @@}}",
{%@@ endif @@%}
	"atomKeymap.promptV3Features": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.formatOnPaste": true,
	"editor.minimap.enabled": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"files.autoSave": "afterDelay",
	"editor.fontFamily": "'monospace', monospace, 'Droid Sans Mono', 'Droid Sans Fallback'",
	"editor.insertSpaces": false,
	"window.menuBarVisibility": "toggle",
	"workbench.activityBar.visible": false,
	"workbench.sideBar.location": "right",
	"editor.renderWhitespace": "boundary",
	"files.insertFinalNewline": true,
	"workbench.colorTheme": "Community Material Theme Palenight High Contrast",
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"workbench.colorCustomizations": {
		"editorRuler.foreground": "#ff4081",
	},
	"editor.rulers": [
		70,
		78
	],
	"[python]": {
		"editor.formatOnPaste": false,
		"editor.rulers": [
			71,
			79,
			87
		],
	},
	"python.formatting.provider": "black",
	"[javascript]": {
		"editor.rulers": [
			71,
			79,
			98
		],
	},
	"[rust]": {
		"editor.rulers": [
			79,
			89,
			98
		],
	},
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.git": false
	},
}
